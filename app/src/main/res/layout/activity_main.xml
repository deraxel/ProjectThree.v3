<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.deraxel.template.MainActivity">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="200sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/blankpxl"
        android:scaleType="fitCenter"
        android:src="@drawable/adrive"
        android:id="@+id/drive_A"
        android:onClick="Adrive"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:layout_width="250sp"
        android:layout_height="225sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/blankpxl"
        android:scaleType="fitCenter"
        android:src="@drawable/bdrive"
        android:id="@+id/drive_B"
        android:onClick="Bdrive"
        android:layout_below="@+id/drive_A"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:layout_width="250sp"
        android:layout_height="250sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/blankpxl"
        android:scaleType="fitCenter"
        android:src="@drawable/cdrive"
        android:id="@+id/drive_C"
        android:onClick="Cdrive"
        android:layout_below="@+id/drive_B"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="300sp"
        android:layout_height="100sp"
        android:layout_marginTop="10sp"
        android:onClick="prePopulate"
        android:textSize="20sp"
        android:text="PrePopulate System"
        android:id="@+id/population"
        android:visibility="visible"
        android:layout_below="@+id/drive_C"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
