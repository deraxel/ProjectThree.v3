<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.deraxel.template.Main3Activity">

    <RelativeLayout
        android:layout_width="0sp"
        android:layout_height="0sp"
        android:id="@+id/center_line"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/titleOfFile"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginTop="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginStart="20sp"
        android:background="#eeeeee"
        android:textSize="40sp"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/dataOfFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginStart="20sp"
        android:textSize="30sp"
        android:background="#eeeeee"
        android:layout_below="@id/titleOfFile"
        android:layout_above="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60sp"
        android:layout_marginTop="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginStart="20sp"
        android:layout_marginBottom="20sp"
        android:background="#aaaaaa"
        android:onClick="back"
        android:text="BACK"
        android:textSize="20sp"
        android:layout_alignRight="@id/center_line"
        android:layout_alignEnd="@id/center_line"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60sp"
        android:background="#aaaaaa"
        android:onClick="delete"
        android:text="DELETE FILE"
        android:layout_marginTop="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginStart="20sp"
        android:layout_marginBottom="20sp"
        android:textSize="20sp"
        android:layout_alignLeft="@id/center_line"
        android:layout_alignStart="@id/center_line"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
